pair<long long, long long> getMinMax(long long a[], int n) {
    pair<long long, long long> ans;
   
   int long long Min=INT_MAX;
   int long long Max=INT_MIN;
   for(int i=0;i<n;i++)
   {
       if(a[i]>Max)
       {
           Max=a[i];
           
       }
       if(a[i]<=Min)
       {
           Min=a[i];
       }
   }
   ans.first=Min;
   ans.second=Max;
   
   return ans;
    
}
